<PlaylistLabel>:
    canvas:
        Color:
            rgba: self.back_color
        Rectangle:
            pos: self.pos
            size: self.size

<PlayListScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                text: "Playlist queue"
                canvas:
                    Color:
                        rgba: 0.25, 0.25, 0.75, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                canvas:
                    Color:
                        rgba: 0.25, 0.25, 0.75, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
                orientation: 'horizontal'
                Label:
                    text: "Cover"
                    size_hint_x: 0.3
                Label:
                    text: "Track"
                    size_hint_x: 0.7

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.8
            BoxLayout:
                id: album_col
                orientation: 'vertical'
                size_hint_x: 0.3
            BoxLayout:
                id: file_col
                orientation: 'vertical'
                size_hint_x: 0.7

        BoxLayout:
            orientation: 'horizontal'
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            Button:
                text: 'Back'
                on_release: root.ctrl.show_main()
            Button:
                text: '<<'
                on_release: root.show_next_page(False)
            BoxLayout:
                Label:
                    text: "Page"
                TextInput:
                    id: page_count
                    text: "1"

                Label:
                    id: page_count_suffix
                    text: "of ??"
            Button:
                text: ">>"
                on_release: root.show_next_page()
