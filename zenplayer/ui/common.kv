#:kivy 1.10

<ZenButton@ButtonBehavior+Label>:
    canvas.before:
        # Outer rectangle
        Color:
            rgba: [0.2, 0.2, 1, 1.0]
        Rectangle:
            pos: self.pos
            size: self.size
        # Inner
        Color:
            rgba: [0.5, 0.5, 0.1, 1] if root.state == "down" else [0.25, 0.25, 0.75, 1]
        Rectangle:
            pos: self.x + 2, self.y + 2
            size: self.width - 4, self.height - 4

<ZenRecycleView@RecycleView>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'