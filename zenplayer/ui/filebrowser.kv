<ZenFileBrowser>:
    filechooser: filechooser
    label_sel: label_sel

    BoxLayout:
        orientation: 'vertical'
        #FileChooserIconView:
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                text: "Select the file or folder"
                canvas:
                    Color:
                        rgba: 0.25, 0.25, 0.75, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: "Up"
                    size_hint_x: 0.1
                    on_release: root.folder_up()
                Label:
                    id: label_sel
                    text: "Selection - None"
                    size_hint_x: 0.8
                Button:
                    text: "Root"
                    size_hint_x: 0.1

        FileChooserListView:
            id: filechooser
            size_hint_y: 0.8
            dirselect: True
            on_selection: label_sel.text = "Selection - " + str(self.selection)

        BoxLayout:
            orientation: 'horizontal'
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            Button:
                text: 'Back'
                on_release: root.ctrl.show_main()
            Button:
                text: "Add and replace"
                on_release: root.add_replace()
            Button:
                text: "Add"
                on_release: root.add_files()
