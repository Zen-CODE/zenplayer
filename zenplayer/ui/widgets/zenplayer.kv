#:kivy 1.10

<ZenPlayer>:
    BoxLayout:
        orientation: 'vertical'
        pos_hint: {"x": 0, "y": 0}
        size_hint: 1, 1
        BoxLayout:
            # Header bar
            orientation: 'horizontal'
            size_hint_y: 0.05
            spacing: 20
            Image:
                source: "images/zencode.jpg"
                size_hint_x: None
                width: self.height
            Label:
                text: root.header
                canvas:
                    Color:
                        rgba: 0.25, 0.25, 0.75, 0.5
                    Line:
                        width: 2
                        points: self.x, self.y, self.right, self.y

            Image:
                source: "images/info.png"
                size_hint_x: None
                width: self.height
        ScreenManager:
            id: sm
            size_hint_y: 0.95
