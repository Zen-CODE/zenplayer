#:kivy 1.10
#: import ZenRecycleView ui.widgets.zenrecycleview.ZenRecycleView
#: import SelectableLabel ui.widgets.zenrecycleview.SelectableLabel
#: import SelectableRecycleBoxLayout ui.widgets.zenrecycleview.SelectableRecycleBoxLayout

<ZenRecycleView>:
    RecycleView:
        id: rv
        viewclass: 'SelectableLabel'
        data: root.data
        pos_hint: {"x": 0, "y": 0}
        size_hint: 1, 1
        SelectableRecycleBoxLayout:
            id: box_layout
            default_size: None, 0.06 * root.height
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
    Label:
        id: note_label
        canvas.before:
            Color:
                rgba: 1.0, 1.0, 1.0, 0.3
            Rectangle:
                pos: self.pos
                size: self.size
        text: root.note_text
        size_hint: None, 0.06
        width: self.texture_size[0] * 1.5
        halign: 'right'
        valign: 'middle'
        pos_hint: {"right": 0.995, "center_y": 0.05}

<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: self.back_color

        Rectangle:
            pos: self.pos
            size: self.size
