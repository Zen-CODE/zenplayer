#:kivy 1.10
#: import ZenRecycleView ui.widgets.zenrecycleview.ZenRecycleView

<AlbumsScreen>:
    header: "Albums"
    BoxLayout:
        orientation: "vertical"
        Label:
            canvas:
                Color:
                    rgba: 0, 0, 1, 0.5
                Line:
                    width: 2
                    points: self.x, self.y + 5, self.right, self.y + 5
            text: "Artist: " + root.artist
            size_hint_y: 0.1

        ZenRecycleView:
            id: rv
            size_hint_y: 0.9
            handler: root

<AlbumPopup>:

    BoxLayout:
        orientation: "vertical"
        padding: 10, 10, 10, 10
        spacing: 10
        ZenButton:
            text: "Add to playlist"
            on_release: root.dismiss(); root.handler.add_to_playlist()
        ZenButton:
            on_release: root.dismiss(); root.handler.add_to_playlist(mode="next")
            text: "Play next"
        ZenButton:
            text: "Play now (insert)"
            on_release: root.dismiss(); root.handler.add_to_playlist(mode="insert")
        ZenButton:
            text: "Play now (replace)"
            on_release: root.dismiss(); root.handler.add_to_playlist(mode="replace")
        ZenButton:
            text: "View Tracks"
            on_release: root.dismiss(); root.handler.view_tracks()
        ZenButton:
            text: "Cancel"
            on_press: root.dismiss()