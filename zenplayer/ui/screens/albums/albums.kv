#:kivy 1.10
#
<AlbumsScreen>:
    header: f"Albums for {root.artist}"
    BoxLayout:
        orientation: 'vertical'
        ZenRecycleView:
            id: rv
            handler: root
            size_hint_y: 0.8
        BoxLayout:
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            ZenButton:
                text: "Choose random"
                on_release: root.randomise = True

<AlbumPopup>:
    size_hint: 0.75, 0.65
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        padding: 10, 10, 10, 10
        spacing: 10
        ZenButton:
            text: "Add to playlist"
            on_release: root.dismiss(); root.handler.add_to_playlist()
        ZenButton:
            on_release: root.dismiss(); root.handler.add_to_playlist(mode="next")
            text: "Play next"
        ZenButton:
            text: "Play now (insert)"
            on_release: root.dismiss(); root.handler.add_to_playlist(mode="insert")
        ZenButton:
            text: "Play now (replace)"
            on_release: root.dismiss(); root.handler.add_to_playlist(mode="replace")
        ZenButton:
            text: "Cancel"
            on_press: root.dismiss()