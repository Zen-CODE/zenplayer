#:kivy 1.10
#
<AlbumsScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                text: "Albums: " + root.artist + " - " + root.album
                canvas:
                    Color:
                        rgba: 0.25, 0.25, 0.75, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size

        ZenRecycleView:
            id: rv
            handler: root
            size_hint_y: 0.8
        BoxLayout:
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            ZenButton:
                text: "Back"
                on_release: root.ctrl.show_screen("Artists")
            ZenButton:
                text: "Choose random"
                on_release: root.randomise = True
            BoxLayout:
                orientation: "horizontal"
                ZenButton:
                    text: "Search:"
                    on_release: root.search()
                TextInput:
                    id: text
                    valign: "middle"

<AlbumPopup>:
    size_hint: 0.75, 0.65
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        padding: 10, 10, 10, 10
        spacing: 10
        ZenButton:
            text: "Add"
            on_release: root.dismiss(); root.handler.add_to_playlist()
        ZenButton:
            text: "Insert"
            on_release: root.dismiss(); root.handler.add_to_playlist(mode="insert")
        ZenButton:
            text: "Replace"
            on_release: root.dismiss(); root.handler.add_to_playlist(mode="replace")
        ZenButton:
            text: "Cancel"
            on_press: root.dismiss()