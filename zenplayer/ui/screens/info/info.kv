#:kivy 1.10

<InfoScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                text: "Track Infomation"
                canvas:
                    Color:
                        rgba: 0.25, 0.25, 0.75, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size

        BoxLayout:
            size_hint_y: 0.8
            orientation: "horizontal"
            Image:
                id: image
                size_hint_x: 0.5
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.5
                Label:
                    markup: True
                    color: 0.25, 1.0, 0.25, 1.0
                    text: "[b]Track Info[/b]"
                Label:
                    id: artist
                Label:
                    id: album
                Label:
                    id: file
                Label:
                    id: filename
                Label:
                    markup: True
                    color: 0.25, 1.0, 0.25, 1.0
                    text: "[b]Track Metadata[/b]"
                Label:
                    id: length
                Label:
                    id: bitrate
                Label:
                    id: bitrate_mode
                Label:
                    id: channels
                Label:
                    id: sample_rate
        BoxLayout:
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            ZenButton:
                text: 'Back'
                on_release: root.ctrl.show_screen("playlist")
