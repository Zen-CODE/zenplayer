#:kivy 1.10

<InfoScreen>:
    header: "Track Info"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.8
            orientation: "horizontal"
            Image:
                id: image
                size_hint_x: 0.5
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.5
                Label:
                    markup: True
                    color: 0.25, 1.0, 0.25, 1.0
                    text: "[b]Track Info[/b]"
                Label:
                    id: artist
                Label:
                    id: album
                Label:
                    id: track
                Label:
                    markup: True
                    color: 0.25, 1.0, 0.25, 1.0
                    text: "[b]Track Metadata[/b]"
                Label:
                    id: length
                Label:
                    id: bitrate
                Label:
                    id: bitrate_mode
                Label:
                    id: channels
                Label:
                    id: sample_rate
