#:kivy 1.10
#: import HEADER_FONT_COLOR ui.styles.HEADER_FONT_COLOR

<Spacer@Widget>:
    size_hint_y: 0.75

<InfoScreen>:
    header: "Track"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.8
            orientation: "horizontal"
            Image:
                id: image
                size_hint_x: 0.5
                on_touch_down: self.collide_point(*args[1].pos) and root.show_artist_info()
            ScrollView:
                size_hint_x: 0.5
                GridLayout:
                    id: info_scroll
                    cols: 1
                    spacing: 10
                    size_hint_y: None
                    height: self.minimum_height
