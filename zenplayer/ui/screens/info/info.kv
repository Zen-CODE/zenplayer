#:kivy 1.10
#: import HEADER_FONT_COLOR ui.styles.HEADER_FONT_COLOR

<Spacer@Widget>:
    size_hint_y: 0.75

<InfoScreen>:
    header: "Track"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.8
            orientation: "horizontal"
            Image:
                id: image
                size_hint_x: 0.5
                on_touch_down: self.collide_point(*args[1].pos) and root.show_artist_info()
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.5
                Spacer:
                Label:
                    markup: True
                    color: HEADER_FONT_COLOR
                    text: "[b]Track Info[/b]"
                Spacer:
                Label:
                    id: artist
                Label:
                    id: album
                Label:
                    id: track_number
                Label:
                    id: track_name
                Spacer:
                Label:
                    markup: True
                    color: HEADER_FONT_COLOR
                    text: "[b]Track Metadata[/b]"
                Spacer:
                Label:
                    id: length
                Label:
                    id: bitrate
                Label:
                    id: bitrate_mode
                Label:
                    id: channels
                Label:
                    id: sample_rate
                Spacer: