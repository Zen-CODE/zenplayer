#:kivy 1.10
#: import ZenRecycleView ui.widgets.zenrecycleview.ZenRecycleView

<ArtistsScreen>:
    header: "Artists"
    BoxLayout:
        orientation: 'vertical'
        ZenRecycleView:
            id: rv
            size_hint_y: 0.8
            handler: root
            size_hint: 1, 1
            pos_hint: {"x": 0, "y": 0}
        BoxLayout:
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            ZenButton:
                text: "Random "
                on_release: root.ctrl.show_screen("Albums", randomise=True)
