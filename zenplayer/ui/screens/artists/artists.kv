#:kivy 1.10
#
<ArtistsScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                text: "Music Library - Artists"
                canvas:
                    Color:
                        rgba: 0.25, 0.25, 0.75, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size
        FloatLayout:
            size_hint_y: 0.8
            Label:
                id: wait_label
                text: "Loading library..."
                size_hint: 1, 1
                pos_hint: {"x": 0, "y": 0}
            ZenRecycleView:
                id: rv
                handler: root
                size_hint: 1, 1
                pos_hint: {"x": 0, "y": 0}
        BoxLayout:
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            ZenButton:
                text: "Back to Playing"
                on_release: root.ctrl.show_screen("Playing")
