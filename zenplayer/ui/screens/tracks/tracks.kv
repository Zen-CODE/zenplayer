#:kivy 1.10
#: import ZenRecycleView ui.widgets.zenrecycleview.ZenRecycleView
#: import HEADER_FONT_COLOR ui.styles.HEADER_FONT_COLOR
#: import BUTTON_FONT_COLOR ui.styles.BUTTON_FONT_COLOR

<TracksScreen>:
    header: "Tracks"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.8
            orientation: "horizontal"
            Image:
                id: image
                size_hint_x: 0.5
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.5
                Label:
                    markup: True
                    color: HEADER_FONT_COLOR
                    text: "[b]" + root.artist + "[/b]"
                    size_hint_y: 0.1
                Label:
                    markup: True
                    color: HEADER_FONT_COLOR
                    text: "[b]" + root.album + "[/b]"
                    size_hint_y: 0.1

                ZenRecycleView:
                    id: rv
                    size_hint_y: 0.7
                    handler: root
                BoxLayout:
                    size_hint_y: 0.1
                    padding: 10, 10, 10, 10
                    ZenButton:
                        color: BUTTON_FONT_COLOR
                        text: "Back"
                        on_press: root.ctrl.zenplayer.show_screen("Albums", artist=root.artist)
