#:kivy 1.10
<TracksScreen>:
    header: "Tracks"
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.8
            orientation: "horizontal"
            Image:
                id: image
                size_hint_x: 0.5
            BoxLayout:
                orientation: "vertical"
                size_hint_x: 0.5
                Label:
                    markup: True
                    color: 0.25, 1.0, 0.25, 1.0
                    text: "[b]" + root.artist + "[/b]"
                    size_hint_y: 0.1
                Label:
                    markup: True
                    color: 0.25, 1.0, 0.25, 1.0
                    text: "[b]" + root.album + "[/b]"
                    size_hint_y: 0.1

                ZenRecycleView:
                    id: rv
                    size_hint_y: 0.8
                    handler: root
