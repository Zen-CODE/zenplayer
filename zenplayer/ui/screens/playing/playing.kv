#:kivy 1.10

<PlayingScreen>:
    header: "ZenPlayer"
    BoxLayout:
        # Center column - 3
        id: center_screen
        orientation: "vertical"
        padding: 10, 10, 10, 10
        Label:
            text: root.ctrl.artist
            size_hint_y: 0.05
        Label:
            text: root.ctrl.album
            size_hint_y: 0.05
        Image:
            size_hint: 1, 0.8
            pos_hint_x: "center"
            on_touch_down: self.collide_point(*args[1].pos) and root.ctrl.show_screen("Info", filename="")
            source: root.ctrl.cover
            allow_stretch: True
        Label:
            text: root.ctrl.track
            size_hint_y: 0.05
        Label:
            text: root.ctrl.time_display
            size_hint_y: 0.05
