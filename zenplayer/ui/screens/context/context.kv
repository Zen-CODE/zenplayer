#:kivy 1.10
#: import ZenRecycleView ui.widgets.zenrecycleview.ZenRecycleView

<ContextScreen>:
    header: "Context"
    BoxLayout:
        orientation: "vertical"
        Label:
            canvas:
                Color:
                    rgba: 0, 0, 1, 0.5
                Line:
                    width: 2
                    points: self.x, self.y + 5, self.right, self.y + 5
            text: root.title
            size_hint_y: 0.1

        ZenRecycleView:
            id: rv
            size_hint_y: 0.9
            handler: root
