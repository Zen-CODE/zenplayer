#:kivy 1.10
#: import SelectableLabel ui.screens.playlist.playlistrv.SelectableLabel


<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: self.back_color
        Rectangle:
            pos: self.pos
            size: self.size

<PlaylistScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                text: "Playlist queue"
                canvas:
                    Color:
                        rgba: 0.25, 0.25, 0.75, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size

        ZenRecycleView:
            id: rv
            viewclass: 'SelectableLabel'
            size_hint_y: 0.8
            ctrl: root.ctrl
            data: root.ctrl.playlist.queue
            current: root.ctrl.playlist.current
        BoxLayout:
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            ZenButton:
                text: 'Back'
                on_release: root.ctrl.show_screen("main")

<PlaylistPopup>:
    size_hint: 0.75, 0.75
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        padding: 10, 10, 10, 10
        spacing: 10
        ZenButton:
            text: "Play"
            on_press: root.dismiss(); root.button_play()
        ZenButton:
            text: "Info"
            on_press: root.dismiss(); root.button_info()
        ZenButton:
            text: "Remove"
            on_press: root.dismiss(); root.button_remove()
        ZenButton:
            text: "Cancel"
            on_press: root.dismiss()
