#:kivy 1.10
#: import ZenRecycleView ui.widgets.zenrecycleview.ZenRecycleView

<PlaylistScreen>:
    current: root.ctrl.playlist.current
    header: "Playlist"
    BoxLayout:
        orientation: 'vertical'
        ZenRecycleView:
            id: rv
            size_hint_y: 0.8
            handler: root
        BoxLayout:
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            ZenButton:
                text: 'Clear'
                on_release: root.button_clear_files()


<PlaylistPopup>:
    size_hint: 0.75, 0.75
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        padding: 10, 10, 10, 10
        spacing: 10
        ZenButton:
            text: "Play"
            on_press: root.dismiss(); root.screen.button_play(root.index)
        ZenButton:
            text: "Info"
            on_press: root.dismiss(); root.screen.button_info(root.index)
        ZenButton:
            text: "Remove"
            on_press: root.dismiss(); root.screen.button_remove(root.index)
        ZenButton:
            text: "Cancel"
            on_press: root.dismiss()
