#:kivy 1.10

#: import PlaylistRV ui.playlistrv.PlaylistRV

<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.5, .5, 1.0, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<PlaylistRV>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        # multiselect: True
        # touch_multiselect: True

<PlaylistScreen>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.1
            Label:
                text: "Playlist queue"
                canvas:
                    Color:
                        rgba: 0.25, 0.25, 0.75, 0.5
                    Rectangle:
                        pos: self.pos
                        size: self.size

        PlaylistRV:
            id: rv
            size_hint_y: 0.8
            data: root.ctrl.playlist.queue
        BoxLayout:
            padding: 10, 10, 10, 10
            size_hint_y: 0.1
            ZenButton:
                text: 'Back'
                on_release: root.ctrl.show_main()

<PlaylistPopup>:
    title: "Track options"
    size_hint: 0.75, 0.75
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        padding: 10, 10, 10, 10
        spacing: 10
        ZenButton:
            text: "Play"
            on_press: root.dismiss(); root.button_play()
        ZenButton:
            text: "Info"
            on_press: root.dismiss(); root.button_info()
        ZenButton:
            text: "Remove"
            on_press: root.dismiss(); root.button_remove()
        ZenButton:
            text: "Cancel"
            on_press: root.dismiss()
