{
    "keymap": {
        "shift+up": {
            "name": "volume_up"
        },
        "shift+down": {
            "name": "volume_down"
        },
        "shift+d": {
            "name": "move_forward"
        },
        "shift+a": {
            "name": "move_backward"
        },
        "shift+x": {
            "name": "play_pause"
        },
        "shift+z": {
            "name": "play_previous"
        },
        "shift+v": {
            "name": "stop"
        },
        "shift+b": {
            "name": "play_next"
        },
        "shift+f": {
            "name": "show_screen",
            "kwargs": {
                "name": "FileBrowser"
            }
        },
        "shift+p": {
            "name": "show_screen",
            "kwargs": {
                "name": "Playlist"
            }
        },
        "shift+m": {
            "name": "show_screen",
            "kwargs": {
                "name": "Playing"
            }
        },
        "shift+i": {
            "name": "show_current_info"
        },
        "shift+q": {
            "name": "quit"
        }
