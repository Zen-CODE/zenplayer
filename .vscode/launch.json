{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "ZenPlayer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/zenplayer/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env":{"KIVY_AUDIO": "vlcplayer"}
        },
        {
            "name": "FireStore",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/zenplayer/components/cloud_firestore.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/zenplayer/components",
            "env": {"PYTHONPATH": "${workspaceFolder}/zenplayer"}
        },
        {
            "name": "Streamlit",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "cwd": "${workspaceFolder}/zpstreamlit/zpstreamlit",
            "args": [
                "run", "main.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}